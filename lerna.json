{
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "package-lock.json",
        "packages/custom-ckeditor-build/**/*"
      ],
      "message": "chore: publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "useNx": false
}
